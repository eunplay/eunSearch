<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/type_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="구 분 : "
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/user_label"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/type_text"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/type_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/type_label"
                app:layout_constraintHorizontal_weight="1.3"
                app:layout_constraintLeft_toRightOf="@+id/type_label"
                app:layout_constraintRight_toLeftOf="@+id/expirationDate_label"
                app:layout_constraintTop_toTopOf="@+id/type_label" />

            <TextView
                android:id="@+id/expirationDate_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="만료일자 : "
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/type_label"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/type_text"
                app:layout_constraintRight_toLeftOf="@+id/expirationDate_text"
                app:layout_constraintTop_toTopOf="@+id/type_label" />

            <TextView
                android:id="@+id/expirationDate_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/type_label"
                app:layout_constraintHorizontal_weight="1.3"
                app:layout_constraintLeft_toRightOf="@+id/expirationDate_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/type_label" />

            <TextView
                android:id="@+id/user_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:singleLine="true"
                android:text="사용자 : "
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/user_text"
                app:layout_constraintTop_toBottomOf="@+id/type_label" />

            <TextView
                android:id="@+id/user_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/user_label"
                app:layout_constraintHorizontal_weight="1.3"
                app:layout_constraintLeft_toRightOf="@+id/user_label"
                app:layout_constraintRight_toLeftOf="@+id/issuer_label"
                app:layout_constraintTop_toTopOf="@+id/user_label" />

            <TextView
                android:id="@+id/issuer_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="발급자 : "
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/user_label"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/user_text"
                app:layout_constraintRight_toLeftOf="@+id/issuer_text"
                app:layout_constraintTop_toTopOf="@+id/user_label" />

            <TextView
                android:id="@+id/issuer_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/user_label"
                app:layout_constraintHorizontal_weight="1.3"
                app:layout_constraintLeft_toRightOf="@+id/issuer_label"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout><!--
